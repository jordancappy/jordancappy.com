  
.caution
  &__tape
    left -250%
    width 180%
    height 10%
    top 40%
    background #ff0
    border-top 10px dashed black
    border-bottom 10px dashed black
    position fixed
    z-index 11
    box-shadow 1px 1px 0px 10px #ff0, 11px 11px 4px 0px #000;
    text-transform uppercase
    padding-left 15%
    font-family arial
    display flex
    justify-content center
    flex-direction column
    font-size 15vw
    transition left .3s ease-in 
    @media screen and (min-width 1200px)
      font-size 150px
      padding-left 25%
    &:first-of-type
      z-index 12
      transform rotateY(20deg)
      height 20%
      box-shadow 1px 1px 0px 10px #ff0, 11px 11px 8px 0px #000;
      transition-delay .3s
    &:nth-of-type(2)
      top 45%
      right 0
      transform rotate(-18deg)
      transform-origin right
    &:nth-of-type(3)
      top 20%
      right 0
      transform rotate(-7deg)
      transform-origin left
    &:nth-of-type(4) 
      top -4%
      transform rotate(45deg)
      transform-origin left
     &:nth-of-type(5) 
      
      top -100%
      left initial
      right -125%
      width 300%
      transform rotate(-80deg)
      transform-origin right
  &--loading
    .caution__tape
      left 0
      &:nth-of-type(2)
        left initial
      &:nth-of-type(4),&:nth-of-type(3)
        left -1%
      &:nth-of-type(5)
        left initial
        right 6%
        top -10%